{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-mkdir",
    "http:default",
    "upload:allow-download",
    "opener:allow-open-path",
    {
      "identifier": "opener:default",
      "allow": [{
        "path": "**"
      }]
    },
    {
      "identifier": "upload:default",
      "allow": [
        {
          "url": "**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": " https://api.curseforge.com/*"
        }
      ]
    },
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:write-all",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "dialog:default",
    "upload:default",
    "process:default"
  ]
}